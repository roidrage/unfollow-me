<html>
  <title>Unfollow.me - A History of your Followers</title>
  <%= stylesheet_link_tag "application" %>
<body>
<ul class="list">
  <% @followers.each do |follower| %>
    <% list_for_date(follower) do %>
      <% if follower.stopped_following_on? %>
        <li class="red">
      <% else %>
        <li class="green">
      <% end %>
      <a href="http://twitter.com/<%= follower.screen_name %>">
        <img src="<%= follower.image_url %>" width="24" align="middle"/>&nbsp;&nbsp;<%= follower.name %>
      </a>
      </li>
      
    <% end %>
  <% end %>

  <li><%= will_paginate @followers %></li>
</ul>
</body>